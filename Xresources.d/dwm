! dwm - window manager settings
! Width of the border around windows
dwm.borderpx: 1

! Fonts
dwm.dmenufont: monospace:Regular:pixelsize=24:autohint=true:antialias=true
dwm.font: monospace:Regular:pixelsize=24:autohint=true:antialias=true

! Gaps between tiled windows
dwm.gappih: 10
dwm.gappiv: 10
dwm.gappoh: 10
dwm.gappov: 10

! Padding for status bar elements dwm.horizpadbar: 20
dwm.vertpadbar: 5

! Colors
! Normal theme - not selected
dwm.normbgcolor: #3b4252
dwm.normfgcolor: #d8dee9
dwm.normbordercolor: #3b4252

! Selected theme
dwm.selbgcolor: #4c566a
dwm.selfgcolor: #eceff4
dwm.selbordercolor: #d08770

! Per tag colors
dwm.tagsel0fg: #aebe8c
dwm.tagsel0bg: #4c566a

dwm.tagsel1fg: #5e81ac
dwm.tagsel1bg: #4c566a

dwm.tagsel2fg: #d08770
dwm.tagsel2bg: #4c566a

dwm.tagsel3fg: #b48ead
dwm.tagsel3bg: #4c566a

